<Page x:Class="lab4_TruePrep.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:lab4_TruePrep"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label FontSize="18">Password</Label>
            <PasswordBox x:Name="pswdTextBox" Height="30" Width="300" Margin="0,5"/>
            <Button x:Name="unlockBtn" Content="Unlock" FontSize="18" Margin="0,5" Click="unlockBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
